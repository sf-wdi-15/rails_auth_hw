<html>
<head>
  <title></title>
</head>
<body>
<div id="editContainer">
<%= form_for @blog do |f| %>
  <div id="editTextField">
    <%= f.text_field :title, placeholder:"title" %>
    <%= f.text_field :date, placeholder:"date" %><br><br>
    <%= f.text_area :content, placeholder:"Your Own Thoughts", :size => "90x30" %><br>
    <%= f.submit "update blog" %>

<% end %>
</div>
</div>
</body>
</html>